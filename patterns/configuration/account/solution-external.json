{
    "Solution": {
        "Title": "Standalone ALM server hosted on an directly exposed single server",
        "Id": "almext",
        "Name": "almexternal",
        "Description": "",
        "Tiers": [
            {
                "Id": "web",
                "RouteTable": "external",
                "Components": [
                    {
                        "Title": "ALM Server",
                        "Id": "alm",
                        "Name": "alm",
                        "Role": "ALM",
                        "EC2": {
                            "Ports": [
                                "https",
                                "ssh"
                            ],
                            "LoadBalanced": false,
                            "FixedIP": true
                        }
                    }
                ]
            }
        ],
        "SharedComponents": [
            {
                "Title": "Contractor performance metrics",
                "Id": "metrics",
                "Name": "metrics",
                "SharedRegion": "ap-southeast-2",
                "S3": {}
            },
            {
                "Title": "Docker images",
                "Id": "docker",
                "Name": "docker",
                "SharedRegion": "ap-southeast-2",
                "S3": {}
            },
            {
                "Title": "Binary images",
                "Id": "binaries",
                "Name": "binaries",
                "SharedRegion": "ap-southeast-2",
                "S3": {}
            }
        ]
    },
    "Segment": {
        "NAT": {
            "Enabled": false
        }
    },
    "Storage" : {
        "default" : {
            "EC2" : {
                "Volumes" : [
                    {
                        "Device" : "/dev/sdp",
                        "Size" : "100
                    }
                ]
            }
        }
    }
}
